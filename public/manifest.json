{
  "manifest_version": 3,
  "name": "Accessibility Manager",
  "version": "1.0",
  "description": "Check how accessible a page is for users.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Accessibility Manager"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["contextMenus", "search", "activeTab", "scripting"]
}
